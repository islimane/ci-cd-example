<aura:component implements="force:lightningQuickActionWithoutHeader,force:hasRecordId,force:hasSObjectName,lightning:isUrlAddressable" controller="GL_WS_Document_Callout" access="global">
    <aura:html tag="style">
        .cuf-content {
            padding: 0 0rem !important;
        }
        .slds-p-around--medium {
            padding: 0rem !important;
        }       
        .slds-modal__content{
            overflow-y:hidden !important;
            height:unset !important;
            max-height:unset !important;
        }
    </aura:html>
    <aura:attribute name="recordId" type="String" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:attribute name="sObjectName" type="String" />
    <aura:attribute name="msg" type="String" />
    <aura:attribute name="getCertificateTitle" type="String" />
    <aura:attribute name="getCertDescription" type="String" />
    <aura:attribute name="cancelLbl" type="String" />
    <aura:attribute name="getLbl" type="String" />
    <aura:handler event="aura:waiting" action="{!c.showSpinner}"/>
    <aura:handler event="aura:doneWaiting" action="{!c.hideSpinner}"/>
    
    <!-- MODAL HEADER -->
    <div class="modal-header slds-modal__header">
        <h4 class="title slds-text-heading--medium">{!v.getCertificateTitle}</h4>
    </div>
    
    <!-- MODAL BODY / INPUT FORM -->    
    <div class="slds-modal__content slds-align_absolute-center slds-m-around_x-large" aura:id="modalbody" id="modalbody">
        <p>{!v.getCertDescription}</p>
    </div>
    
    <!-- MODAL FOOTER -->
    <div class="modal-footer slds-modal__footer">
        <div class="forceChangeRecordTypeFooter">
            <lightning:button name='Cancel' label='{!v.cancelLbl}' onclick='{!c.closeQuick}'/>
            <lightning:button variant="brand" name='Get' label='{!v.getLbl}' onclick='{!c.getDocs}'/>
        </div>
    </div>
</aura:component>