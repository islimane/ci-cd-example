{
  "trailingComma": "none",
  "apexInsertFinalNewline": false,
  "singleQuote": true,
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    }
  ],
  "semi": false,
  "printWidth": 140
}
